<div class="page-header">

<h3>Users for prroject <%= @prroject.title %></h3>

<strong>(Other than yourself)</strong>

</div>

<table class="table table-striped">

<thead>

<tr>

<th>Email</th>

<th><%=t '.actions', :default => t("helpers.actions") %></th>

</tr>

</thead>

<tbody>

<% @prroject_users.each do |prroject_user| %>

<tr>

<td><%= prroject_user.email %></td>

<td>

<% if !prroject_user.is_admin? %>

<%= link_to 'Remove',

user_prroject_path(prroject_user.user_prroject.find_by(prroject_id: @prroject.id), tenant_id: @prroject.tenant_id),

:method => :delete,

:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },

:class => 'btn btn-xs btn-danger' %>

<% end %>

</td>

</tr>

<% end %>

</tbody>

</table>

<h3>Users to add to prroject <%= @prroject.title %></h3>

<strong>(Admins don't need to be added)</strong>

<table class="table table-striped">

<thead>

<tr>

<th>Email</th>

<th><%=t '.actions', :default => t("helpers.actions") %></th>

</tr>

</thead>

<tbody>

<% @other_users.each do |other_user| %>

<tr>

<td><%= other_user.email %></td>

<td>

<%= link_to 'Add',

add_user_tenant_prroject_path(id: @prroject.id, tenant_id: @prroject.tenant_id, user_id: other_user.id),

:method => :put,

:class => 'btn btn-xs btn-success' %>

</td>

</tr>

<% end %>

</tbody>

</table>

<%= link_to 'Back',

tenant_prroject_path(id: @prroject.id, tenant_id: @prroject.tenant_id),

:class => 'btn btn-primary' %>